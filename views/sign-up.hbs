{{> welcome-menu id="signup"}}

<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui segment form" action="/register" method="POST">
            <h3 class="ui header">Register</h3>
            <div class="two fields">
                <div class="field">
                    <label>First Name</label>
                    <input placeholder="First Name" type="text" name="firstName" required>
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder="Last Name" type="text" name="lastName" required>
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    <label>Height</label>
                    <input placeholder="cm" type="text" name="height" required>
                </div>
                <div class="field">
                    <label>Weight</label>
                    <input placeholder="kg" type="text" name="startingWeight" required>
                </div>
                <div class="field">
                    <label> Gender </label>
                    <select title="Gender" class="ui dropdown" name="gender">
                        <option selected disabled> </option>
                        <option value="Male"> Male</option>
                        <option value="Female"> Female</option>
                    </select>
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="Email" type="email" name="email" required>
            </div>
            <div class="field">
                <label>Password</label>
                <input title="Password" type="password" name="password">
            </div>
            <button class="ui blue submit button">Submit</button>
        </form>
    </div>
    <div class="column">
        <img class="ui image" src="/public/images/todo-1.png">
    </div>
</div>