{{> menu id="settings"}}

<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui stacked segment form" action="/settings" method="POST">
            <h3 class="ui header">Update details</h3>
            <div class="two fields">
                <div class="field">
                    <label>First Name</label>
                    <input placeholder="First Name" value={{member.name.first}} type="text" name="firstName">
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder="Last Name" value={{member.name.last}} type="text" name="lastName">
                </div>
            </div>
            <div class="three fields">
                <div class="field">
                    <label>Height</label>
                    <input placeholder="cm" value={{member.details.height}} type="text" name="height">
                </div>
                <div class="field">
                    <label>Starting Weight</label>
                    <input placeholder="kg" value={{member.details.startingWeight}} type="text" name="startingWeight">
                </div>
                <div class="field">
                    <label>Gender</label>
                    <select class="ui dropdown" value="{{member.details.gender}} " name="gender">
                        <option disabled> </option>
                        <option value="Male"> Male</option>
                        <option value="Female"> Female</option>
                    </select>
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="Email" value={{member.email}} type="text" name="email">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" value={{member.password}} name="password">
            </div>
            <button class="ui blue submit button">Submit</button>
        </form>
    </div>
    <div class="column">
        <img class="ui image" src="/public/images/about.jpg">
    </div>
</div>
