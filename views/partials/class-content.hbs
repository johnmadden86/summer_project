<div class="content">
    {{#each schedule}}
        {{#if full}}
            <a href="/classes/{{../id}}/enrol-one/{{id}}" title="Class is full" class="ui red icon button disabled">
                {{dropDateYear date}}
            </a>
        {{else}}
            <a href="/classes/{{../id}}/enrol-one/{{id}}"
                {{#if enrolled}}
               title="Click to un-enrol" class="ui olive icon button"
                {{else}}
               title="Click to enrol" class="ui icon button"
                {{/if}}
            >
                {{dropDateYear date}}&nbsp;&nbsp;
                {{#if enrolled}}
                    <i class="checked calendar icon"></i>
                {{else}}
                    <i class="calendar outline icon"></i>
                {{/if}}
            </a>
        {{/if}}
    {{/each}}
    <br><br>
    <a href="/classes/{{id}}/enrol-all" class="ui teal icon button" title="Enrol in all"> Enrol in all </a>
    <a href="/classes/{{id}}/unenrol-all" class="ui teal icon button" title="Un-enrol from all"> Un-enrol from all </a>
</div>