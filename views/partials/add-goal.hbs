<form class="ui segment form" name="addAssessment" action="/goals/add-goal" method="POST">
    <h3 class="ui header">Add a new goal</h3>
    <div class="two fields">
        <div class="ui calendar field" id="date">
            <label>Date</label>
            <div class="ui input left icon">
                <i class="calendar icon"></i>
                <input placeholder="dd/mm/yyyy" name="date" autocomplete="off">
            </div>
        </div>
        <div class="field">
            <label> Description </label>
            <textarea name="description" rows="1" title="description"></textarea>
        </div>
    </div>
    <div class="six fields">
        <div class="field">
            <label>Weight</label>
            <input placeholder="kg" value="{{stats.currentWeight}}" type="number" min="0" max="250" step="0.1" name="weight">
        </div>
        <div class="field">
            <label>Chest</label>
            <input placeholder="cm" value="{{stats.latestAssessment.chest}}" type="number" min="0" max="250" step="0.1" name="chest">
        </div>
        <div class="field">
            <label>Thigh</label>
            <input placeholder="cm" value="{{stats.latestAssessment.thigh}}" type="number" min="0" max="250" step="0.1" name="thigh">
        </div>
        <div class="field">
            <label>Upper Arm</label>
            <input placeholder="cm" value="{{stats.latestAssessment.upperArm}}" type="number" min="0" max="250" step="0.1" name="upperArm">
        </div>
        <div class="field">
            <label>Waist</label>
            <input placeholder="cm" value="{{stats.latestAssessment.waist}}" type="number" min="0" max="250" step="0.1" name="waist">
        </div>
        <div class="field">
            <label>Hips</label>
            <input placeholder="cm" value="{{stats.latestAssessment.hips}}" type="number" min="0" max="250" step="0.1" name="hips">
        </div>
    </div>
    <button class="ui blue submit button">Add Goal</button>
</form>
<script>
    $(function ()
            {
                let oneWeek = new Date();
                let twoMonths = new Date();
                oneWeek = new Date(oneWeek.setDate(oneWeek.getDate() + 7));
                console.log(oneWeek);
                twoMonths = new Date(twoMonths.setMonth(twoMonths.getMonth() + 2));
                console.log(twoMonths);

                const monthsShort = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

                $('#date').calendar(
                        {
                            type: 'date',
                            firstDayOfWeek: 1, //starts on Monday
                            minDate: oneWeek, //no earlier than one week from today
                            maxDate: twoMonths, //no later than two months from today
                            monthFirst: false,
                            formatter: {
                                date: function (date, settings) {
                                    let day = date.getDate();
                                    let month = monthsShort[date.getMonth()];
                                    let year = date.getFullYear().toString().substring(2);
                                    return day + ' ' + month + ' ' + year;
                                }
                            }
                        }
                );
            }
    );
</script>