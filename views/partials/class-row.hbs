<div class="ui bulleted list">
    {{#each classes}}
        <tr>
            <td> {{details.name}} </td>
            <td> {{details.duration}} </td>
            <td> {{details.capacity}} </td>
            <td> {{details.difficulty}} </td>
            <td> {{details.time}} </td>
            <td> {{details.day }} </td>
            <td> {{details.date}} </td>
            <td> {{details.weeks}} weeks </td>
            <td>
                <a href="/trainer-classes/edit-class/{{classId}}" class="ui icon button" title="Edit">
                    <i class="icon write"></i>
                </a>
                <a href="/trainer-classes/delete-class/{{classId}}" class="ui icon button" title="Delete">
                    <i class="icon trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
</div>