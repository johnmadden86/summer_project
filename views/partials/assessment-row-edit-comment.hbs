<div class="ui bulleted list">
    {{#each member.assessments}}

        <tr>
            <td>{{date}}</td>
            <td>{{weight}}</td>
            <td>{{chest}}</td>
            <td>{{thigh}}</td>
            <td>{{upperArm}}</td>
            <td>{{waist}}</td>
            <td>{{hips}}</td>
            <td>
                {{#if trend}}
                    <i class="large green thumbs up icon"></i>
                {{else}}
                    <i class="large red thumbs down icon"></i>
                {{/if}}
            </td>
            <form class="ui form" action="/trainer-assessment/{{../member.id}}/edit-comment/{{assessmentId}}" method="POST">
                <td>
                    <div class="ui field">
                        <textarea name="comment" title="comment"> {{comment}} </textarea>
                    </div>
                </td>
                <td>
                    <button class="ui blue submit button"> Update </button>
                </td>
            </form>
        </tr>
    {{/each}}
</div>


