<div class="column segment">
    <form class="ui segment form" action="/register" method="POST">
        <h2 class="ui header center aligned">Register</h2>
        <div class="two fields">
            <div class="required field">
                <label>First Name</label>
                <input placeholder="First Name" name="firstName" required>
            </div>
            <div class="required field">
                <label>Last Name</label>
                <input placeholder="Last Name" name="lastName" required>
            </div>
        </div>
        <div class="three fields">
            <div class="required field">
                <label>Height</label>
                <input placeholder="cm" type="number" min="0" max="250" step="0.1" name="height" required>
            </div>
            <div class="required field">
                <label>Weight</label>
                <input placeholder="kg" type="number" min="0" max="250" step="0.1" name="startingWeight" required>
            </div>
            <div class="field">
                <label>Gender</label>
                <select title="Gender" class="ui dropdown" name="gender">
                    <option selected disabled> </option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
        </div>
        <div class="required field">
            <label>Email</label>
            <input placeholder="Email" type="email" name="email">
        </div>
        <div class="required field">
            <label>Password</label>
            <input type="password" name="password" title="Password" required>
        </div>
        <div class="required field">
            <label>Confirm password</label>
            <input type="password" name="passwordConfirm" title="Password">
        </div>
        <button class="ui blue submit button">Submit</button>
    </form>
</div>

<script>
    $('.ui.form')
            .form(
                    {
                        fields: {
                            email: 'email',
                            passwordConfirm: 'match[password]'
                        },
                    }
            )
    ;
</script>

